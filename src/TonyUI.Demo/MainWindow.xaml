<Window x:Class="TonyUI.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TonyUI.Demo"
        xmlns:helpers="clr-namespace:TonyUI.Helpers;assembly=TonyUI"
        mc:Ignorable="d"
        Title="TonyUI Demo - shadcn/ui Style WPF Controls" Height="900" Width="1400"
        Background="{StaticResource BackgroundBrush}"
        FontFamily="{StaticResource DefaultFontFamily}"
        FontSize="{StaticResource FontSizeNormal}"
        Foreground="{StaticResource ForegroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" 
                Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0"
                Padding="16">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,24">
                    <TextBlock Text="TonyUI" 
                               Style="{StaticResource Heading2Style}" 
                               FontWeight="Bold"
                               Margin="0,0,0,4"/>
                    <TextBlock Text="shadcn/ui for WPF" 
                               Style="{StaticResource SmallTextStyle}" 
                               Foreground="{StaticResource MutedForegroundBrush}"/>
                </StackPanel>

                <!-- 主题切换 -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,24">
                    <TextBlock Text="Theme" 
                               Style="{StaticResource LabelTextStyle}" 
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="ThemeSelector" 
                              Style="{StaticResource ComboBoxStyle}"
                              SelectedIndex="0">
                        <ComboBoxItem Content="Zinc" />
                        <ComboBoxItem Content="Slate" />
                        <ComboBoxItem Content="Stone" />
                        <ComboBoxItem Content="Gray" />
                        <ComboBoxItem Content="Neutral" />
                    </ComboBox>
                </StackPanel>

                <!-- 导航菜单 -->
                <ScrollViewer DockPanel.Dock="Top">
                    <StackPanel x:Name="NavigationPanel" />
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- 右侧内容区域 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource CardBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="CurrentComponentTitle" 
                               Style="{StaticResource Heading2Style}" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text=" Component" 
                               Style="{StaticResource Heading2Style}" 
                               FontWeight="SemiBold"
                               Foreground="{StaticResource MutedForegroundBrush}"/>
                </StackPanel>
            </Border>

            <!-- 内容展示区域 -->
            <ScrollViewer Grid.Row="1" Padding="24">
                <ContentPresenter x:Name="MainContentPresenter" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
