<Window x:Class="TonyUI.Demo.NewMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:TonyUI.Demo.ViewModels"
        xmlns:components="clr-namespace:TonyUI.Demo.Components"
        xmlns:converters="clr-namespace:TonyUI.Demo.Converters"
        mc:Ignorable="d"
        Title="TonyUI Demo - All Controls" 
        Height="800" 
        Width="1200"
        WindowState="Maximized">
    
    <Window.Resources>
        <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" 
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource SecondaryBackgroundBrush}" 
                        Padding="15,10">
                    <TextBlock Text="TonyUI Controls" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                </Border>
                
                <!-- Tree Navigation -->
                <TreeView Grid.Row="1" 
                          x:Name="NavigationTreeView"
                          ItemsSource="{Binding NavigationTree}"
                          SelectedItemChanged="NavigationTreeView_SelectedItemChanged"
                          Margin="10,10,10,10"
                          BorderThickness="0"
                          Background="Transparent">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type viewmodels:TreeNode}" 
                                                  ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Name}" 
                                       FontWeight="{Binding HasChildren, Converter={StaticResource BoolToFontWeightConverter}}"
                                       Margin="2,3"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
                
                <!-- Theme Selector -->
                <Border Grid.Row="2" 
                        Background="{DynamicResource SecondaryBackgroundBrush}" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Theme:" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Themes}" 
                                  SelectedItem="{Binding SelectedTheme, Mode=TwoWay}" 
                                  HorizontalAlignment="Stretch" 
                                  Height="30"
                                  SelectionChanged="ComboBox_SelectionChanged"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Border Grid.Row="0" 
                    Background="{DynamicResource SecondaryBackgroundBrush}" 
                    Padding="15,10" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,0,0,1">
                <TextBlock Text="{Binding SelectedComponent}" 
                           FontSize="20" 
                           FontWeight="SemiBold"/>
            </Border>
            
            <!-- Content Area -->
            <ContentPresenter Grid.Row="1" 
                              Margin="20" 
                              Content="{Binding SelectedComponentContent}"/>
        </Grid>
    </Grid>
</Window>