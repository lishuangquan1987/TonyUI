<UserControl x:Class="TonyUI.Demo.Components.SlidersComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Sliders" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Sliders" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Default Slider" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Slider Style="{StaticResource SliderStyle}" Width="300" Margin="0,0,0,16" />
                <Slider Style="{StaticResource SliderStyle}" Width="300" Value="50" Margin="0,0,0,16" />
                <Slider Style="{StaticResource SliderStyle}" Width="300" IsEnabled="False" />
            </StackPanel>
            
            <TextBlock Text="Range Sliders" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Slider Style="{StaticResource SliderStyle}" Width="300" Minimum="0" Maximum="100" Value="25" Margin="0,0,0,16" />
                <Slider Style="{StaticResource SliderStyle}" Width="300" Minimum="0" Maximum="100" Value="75" Margin="0,0,0,16" />
            </StackPanel>
            
            <TextBlock Text="Custom Styling" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Slider Style="{StaticResource SliderStyle}" Width="300" Value="30" Margin="0,0,0,16" />
                <Slider Style="{StaticResource SliderStyle}" Width="300" Value="80" Margin="0,0,0,16" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>