<UserControl x:Class="TonyUI.Demo.Components.DataDisplayComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- DataGrid -->
            <TextBlock Text="DataGrid" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <DataGrid x:Name="sampleDataGrid"
                      Style="{StaticResource DataGridStyle}"
                      Width="600"
                      Height="200"
                      Margin="0,0,0,32"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="100" />
                    <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- ListBox -->
            <TextBlock Text="ListBox" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <ListBox Style="{StaticResource ListBoxStyle}"
                     Width="300"
                     Height="150"
                     Margin="0,0,0,32">
                <ListBoxItem Content="Item 1" Style="{StaticResource ListBoxItemStyle}" />
                <ListBoxItem Content="Item 2" Style="{StaticResource ListBoxItemStyle}" />
                <ListBoxItem Content="Item 3" Style="{StaticResource ListBoxItemStyle}" />
                <ListBoxItem Content="Item 4" Style="{StaticResource ListBoxItemStyle}" />
                <ListBoxItem Content="Item 5" Style="{StaticResource ListBoxItemStyle}" />
            </ListBox>

            <!-- ListView -->
            <TextBlock Text="ListView" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <ListView Style="{StaticResource ListViewStyle}"
                      Width="400"
                      Height="150"
                      Margin="0,0,0,32">
                <ListViewItem Content="List Item 1" Style="{StaticResource ListViewItemStyle}" />
                <ListViewItem Content="List Item 2" Style="{StaticResource ListViewItemStyle}" />
                <ListViewItem Content="List Item 3" Style="{StaticResource ListViewItemStyle}" />
                <ListViewItem Content="List Item 4" Style="{StaticResource ListViewItemStyle}" />
                <ListViewItem Content="List Item 5" Style="{StaticResource ListViewItemStyle}" />
            </ListView>

            <!-- ProgressBar -->
            <TextBlock Text="ProgressBar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ProgressBar Style="{StaticResource ProgressBarStyle}"
                             Width="300"
                             Value="50"
                             Margin="0,0,0,8" />
                <ProgressBar Style="{StaticResource ProgressBarStyle}"
                             Width="300"
                             IsIndeterminate="True" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>