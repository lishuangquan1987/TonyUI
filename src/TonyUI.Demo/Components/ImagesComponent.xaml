<UserControl x:Class="TonyUI.Demo.Components.ImagesComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Images" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Image Controls" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Image" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Image Source="/Resources/Images/sample-image.jpg" 
                       Width="200" 
                       Height="150" 
                       Stretch="Uniform" 
                       Margin="0,0,20,0" />
                <Image Source="/Resources/Images/logo.png" 
                       Width="150" 
                       Height="150" 
                       Stretch="Uniform" />
            </StackPanel>
            
            <TextBlock Text="Avatar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Image Source="/Resources/Images/avatar1.jpg" 
                       Width="64" 
                       Height="64" 
                       Stretch="UniformToFill" 
                       RenderOptions.BitmapScalingMode="HighQuality" 
                       Margin="0,0,20,0">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="32" RadiusY="32" Center="32,32" />
                    </Image.Clip>
                </Image>
                <Image Source="/Resources/Images/avatar2.jpg" 
                       Width="48" 
                       Height="48" 
                       Stretch="UniformToFill" 
                       RenderOptions.BitmapScalingMode="HighQuality" 
                       Margin="0,0,20,0">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="24" RadiusY="24" Center="24,24" />
                    </Image.Clip>
                </Image>
                <Image Source="/Resources/Images/avatar3.jpg" 
                       Width="32" 
                       Height="32" 
                       Stretch="UniformToFill" 
                       RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="16" RadiusY="16" Center="16,16" />
                    </Image.Clip>
                </Image>
            </StackPanel>
            
            <TextBlock Text="Image Gallery" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <WrapPanel Margin="0,0,0,32">
                <Image Source="/Resources/Images/gallery-item1.jpg" 
                       Width="120" 
                       Height="120" 
                       Stretch="UniformToFill" 
                       Margin="0,0,10,10">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,120,120" />
                    </Image.Clip>
                </Image>
                <Image Source="/Resources/Images/gallery-item2.jpg" 
                       Width="120" 
                       Height="120" 
                       Stretch="UniformToFill" 
                       Margin="0,0,10,10">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,120,120" />
                    </Image.Clip>
                </Image>
                <Image Source="/Resources/Images/gallery-item3.jpg" 
                       Width="120" 
                       Height="120" 
                       Stretch="UniformToFill" 
                       Margin="0,0,10,10">
                    <Image.Clip>
                        <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,120,120" />
                    </Image.Clip>
                </Image>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>