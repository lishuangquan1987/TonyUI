<UserControl x:Class="TonyUI.Demo.Components.MenuComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Menu -->
            <TextBlock Text="Menu" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Menu Margin="0,0,0,32" Height="30">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" InputGestureText="Ctrl+N" />
                    <MenuItem Header="_Open" InputGestureText="Ctrl+O" />
                    <MenuItem Header="_Save" InputGestureText="Ctrl+S" />
                    <Separator />
                    <MenuItem Header="E_xit" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Cut" InputGestureText="Ctrl+X" />
                    <MenuItem Header="C_opy" InputGestureText="Ctrl+C" />
                    <MenuItem Header="_Paste" InputGestureText="Ctrl+V" />
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_About" />
                </MenuItem>
            </Menu>

            <!-- ContextMenu -->
            <TextBlock Text="ContextMenu" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Background="{StaticResource CardBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Padding="20"
                    Margin="0,0,0,32">
                <TextBlock Text="Right-click me for context menu" 
                           Foreground="{StaticResource ForegroundBrush}"
                           TextAlignment="Center"/>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Cut" />
                        <MenuItem Header="Copy" />
                        <MenuItem Header="Paste" />
                        <Separator />
                        <MenuItem Header="Select All" />
                    </ContextMenu>
                </Border.ContextMenu>
            </Border>

            <!-- MenuItem Variants -->
            <TextBlock Text="MenuItem Variants" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <MenuItem Header="Standard MenuItem" Margin="0,0,0,8" />
                <MenuItem Header="Disabled MenuItem" IsEnabled="False" Margin="0,0,0,8" />
                <MenuItem Header="MenuItem with Submenu">
                    <MenuItem Header="Submenu Item 1" />
                    <MenuItem Header="Submenu Item 2" />
                </MenuItem>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>