<UserControl x:Class="TonyUI.Demo.Components.CheckBoxesComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Checkboxes" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Checkboxes" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Default Checkbox" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <CheckBox Content="Unchecked checkbox" Style="{StaticResource CheckBoxStyle}" Margin="0,0,0,8" />
                <CheckBox Content="Checked checkbox" Style="{StaticResource CheckBoxStyle}" IsChecked="True" Margin="0,0,0,8" />
                <CheckBox Content="Indeterminate checkbox" Style="{StaticResource CheckBoxStyle}" IsChecked="{x:Null}" Margin="0,0,0,8" />
                <CheckBox Content="Disabled checkbox" Style="{StaticResource CheckBoxStyle}" IsEnabled="False" />
            </StackPanel>
            
            <TextBlock Text="Custom Styling" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <CheckBox Content="Styled checkbox with custom appearance" Style="{StaticResource CheckBoxStyle}" Margin="0,0,0,8" />
                <CheckBox Content="Another styled checkbox" Style="{StaticResource CheckBoxStyle}" IsChecked="True" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>