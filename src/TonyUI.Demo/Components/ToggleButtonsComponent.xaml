<UserControl x:Class="TonyUI.Demo.Components.ToggleButtonsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Toggle Buttons" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Toggle Buttons" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Default Toggle Button" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ToggleButton Content="Toggle off" Style="{StaticResource ToggleButtonStyle}" Margin="0,0,0,8" />
                <ToggleButton Content="Toggle on" Style="{StaticResource ToggleButtonStyle}" IsChecked="True" Margin="0,0,0,8" />
                <ToggleButton Content="Disabled toggle" Style="{StaticResource ToggleButtonStyle}" IsEnabled="False" />
            </StackPanel>
            
            <TextBlock Text="Switch Toggle (using ToggleButton)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Switch off" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <ToggleButton Style="{StaticResource ToggleSwitchStyle}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Switch on" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <ToggleButton Style="{StaticResource ToggleSwitchStyle}" IsChecked="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Disabled switch" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <ToggleButton Style="{StaticResource ToggleSwitchStyle}" IsEnabled="False" />
                </StackPanel>
            </StackPanel>
            
            <TextBlock Text="Custom Styling" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ToggleButton Content="Styled toggle button" Style="{StaticResource ToggleButtonStyle}" Margin="0,0,0,8" />
                <ToggleButton Content="Another styled toggle" Style="{StaticResource ToggleButtonStyle}" IsChecked="True" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>