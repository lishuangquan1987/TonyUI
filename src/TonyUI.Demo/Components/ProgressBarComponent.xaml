<UserControl x:Class="TonyUI.Demo.Components.ProgressBarComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Progress Bars" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Progress Bars" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Default Progress Bar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="8" Margin="0,0,0,8" Value="30" />
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="8" Margin="0,0,0,8" Value="60" />
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="8" Margin="0,0,0,8" Value="90" />
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="8" Margin="0,0,0,8" IsEnabled="False" Value="50" />
            </StackPanel>
            
            <TextBlock Text="Indeterminate Progress Bar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="8" Margin="0,0,0,8" IsIndeterminate="True" />
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="12" Margin="0,0,0,8" IsIndeterminate="True" />
            </StackPanel>
            
            <TextBlock Text="Custom Styling" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="6" Margin="0,0,0,8" Value="45" />
                <ProgressBar Style="{StaticResource ProgressBarStyle}" Width="300" Height="10" Margin="0,0,0,8" Value="75" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>