<UserControl x:Class="TonyUI.Demo.Components.RadioButtonsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Radio Buttons" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Radio Buttons" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Default Radio Buttons" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <RadioButton Content="Radio 1" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup1" Margin="0,0,0,8" />
                <RadioButton Content="Radio 2" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup1" Margin="0,0,0,8" />
                <RadioButton Content="Radio 3 (checked)" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup1" IsChecked="True" Margin="0,0,0,8" />
                <RadioButton Content="Disabled radio" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup2" IsEnabled="False" />
            </StackPanel>
            
            <TextBlock Text="Custom Styling" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <RadioButton Content="Styled radio button" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup3" Margin="0,0,0,8" />
                <RadioButton Content="Another styled radio button" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup3" IsChecked="True" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>