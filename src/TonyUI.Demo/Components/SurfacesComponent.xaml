<UserControl x:Class="TonyUI.Demo.Components.SurfacesComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- Accordion -->
            <TextBlock Text="Accordion (Using Expander)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Expander Style="{StaticResource ExpanderStyle}"
                          Header="Section 1"
                          Width="400"
                          Margin="0,0,0,8">
                    <TextBlock Text="This is the expanded content of the first section."
                               Style="{StaticResource BodyStyle}"
                               Padding="8" />
                </Expander>
                <Expander Style="{StaticResource ExpanderStyle}"
                          Header="Section 2"
                          Width="400"
                          Margin="0,0,0,8">
                    <TextBlock Text="This is the expanded content of the second section."
                               Style="{StaticResource BodyStyle}"
                               Padding="8" />
                </Expander>
                <Expander Style="{StaticResource ExpanderStyle}"
                          Header="Section 3"
                          Width="400">
                    <TextBlock Text="This is the expanded content of the third section."
                               Style="{StaticResource BodyStyle}"
                               Padding="8" />
                </Expander>
            </StackPanel>

            <!-- Alert -->
            <TextBlock Text="Alert (Using Card)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Style="{StaticResource CardStyle}"
                    Width="400"
                    Margin="0,0,0,32"
                    BorderBrush="{StaticResource SecondaryBrush}">
                <StackPanel>
                    <TextBlock Text="Alert Title"
                               Style="{StaticResource CardTitleStyle}" />
                    <TextBlock Text="This is an alert message with important information."
                               Style="{StaticResource CardDescriptionStyle}"
                               Margin="0,0,0,8" />
                    <Button Content="Dismiss"
                            Style="{StaticResource SecondaryButtonStyle}"
                            HorizontalAlignment="Left" />
                </StackPanel>
            </Border>

            <!-- Card -->
            <TextBlock Text="Card" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Style="{StaticResource CardStyle}"
                    Width="400"
                    Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="Card Title"
                               Style="{StaticResource CardTitleStyle}" />
                    <TextBlock Text="This is a card component with shadcn/ui styling."
                               Style="{StaticResource CardDescriptionStyle}"
                               Margin="0,0,0,8" />
                    <Button Content="Action"
                            Style="{StaticResource PrimaryButtonStyle}"
                            HorizontalAlignment="Left" />
                </StackPanel>
            </Border>

            <!-- Dialog -->
            <TextBlock Text="Dialog (Simulated)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Style="{StaticResource CardStyle}"
                    Width="400"
                    Height="200"
                    Margin="0,0,0,32">
                <StackPanel>
                    <TextBlock Text="Dialog Title"
                               Style="{StaticResource CardTitleStyle}" />
                    <TextBlock Text="This simulates a modal dialog with action buttons."
                               Style="{StaticResource BodyStyle}"
                               Margin="0,8,0,16" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" />
                        <Button Content="Confirm" Style="{StaticResource PrimaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Sheet -->
            <TextBlock Text="Sheet (Simulated)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Style="{StaticResource CardStyle}"
                    Width="300"
                    Height="300"
                    Margin="0,0,0,32">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="âœ•" Style="{StaticResource GhostButtonStyle}" FontSize="16" />
                    </StackPanel>
                    <TextBlock Text="Sheet Content"
                               Style="{StaticResource Heading3Style}"
                               Margin="0,0,0,8" />
                    <TextBlock Text="This simulates a side sheet panel with close button."
                               Style="{StaticResource BodyStyle}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16" />
                    <Button Content="Action" Style="{StaticResource PrimaryButtonStyle}" />
                </StackPanel>
            </Border>

            <!-- Tooltip -->
            <TextBlock Text="Tooltip" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Button Content="Hover for tooltip"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,0,32">
                <Button.ToolTip>
                    <ToolTip Content="This is a helpful tooltip message" Style="{StaticResource ToolTipStyle}" />
                </Button.ToolTip>
            </Button>

            <!-- Badge -->
            <TextBlock Text="Badge (Using small colored buttons)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal">
                <Button Content="Primary" Style="{StaticResource PrimaryButtonStyle}" FontSize="10" Padding="8,2" Margin="0,0,8,0" />
                <Button Content="Secondary" Style="{StaticResource SecondaryButtonStyle}" FontSize="10" Padding="8,2" Margin="0,0,8,0" />
                <Button Content="Destructive" Style="{StaticResource DestructiveButtonStyle}" FontSize="10" Padding="8,2" Margin="0,0,8,0" />
                <Button Content="Outline" Style="{StaticResource OutlineButtonStyle}" FontSize="10" Padding="8,2" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>