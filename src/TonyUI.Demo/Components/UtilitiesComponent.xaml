<UserControl x:Class="TonyUI.Demo.Components.UtilitiesComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- Date Picker -->
            <TextBlock Text="Date Picker" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <DatePicker Style="{StaticResource DatePickerStyle}" Width="200" Margin="0,0,0,8" />
                <DatePicker Style="{StaticResource DatePickerStyle}" Width="200" IsEnabled="False" />
            </StackPanel>

            <!-- Calendar -->
            <TextBlock Text="Calendar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Calendar Style="{StaticResource CalendarStyle}" Width="300" Height="300" Margin="0,0,0,32" />

            <!-- Scroll Area -->
            <TextBlock Text="Scroll Area (with custom scrollbar)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <ScrollViewer Width="300" Height="150" Margin="0,0,0,32" 
                          Style="{StaticResource ScrollViewerStyle}">
                <TextBlock Text="This ScrollViewer uses the customized ScrollBar styles. You can see the styled scrollbars when content overflows.&#10;&#10;Line 1&#10;Line 2&#10;Line 3&#10;Line 4&#10;Line 5&#10;Line 6&#10;Line 7&#10;Line 8&#10;Line 9&#10;Line 10&#10;Line 11&#10;Line 12&#10;Line 13&#10;Line 14&#10;Line 15&#10;Line 16&#10;Line 17&#10;Line 18&#10;Line 19&#10;Line 20" />
            </ScrollViewer>

            <!-- Separator -->
            <TextBlock Text="Separator" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="Above Separator" Margin="0,0,0,8" />
                <Separator Style="{StaticResource HorizontalSeparatorStyle}" Margin="0,0,0,8" />
                <TextBlock Text="Below Separator" />
            </StackPanel>

            <!-- Avatar -->
            <TextBlock Text="Avatar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Border Style="{StaticResource AvatarStyle}" Margin="0,0,8,0">
                    <TextBlock Text="S"
                               FontSize="{StaticResource FontSizeMedium}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
                <Border Style="{StaticResource AvatarSmallStyle}" Margin="0,0,8,0">
                    <TextBlock Text="S"
                               FontSize="{StaticResource FontSizeSmall}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
                <Border Style="{StaticResource AvatarLargeStyle}" Margin="0,0,8,0">
                    <TextBlock Text="L"
                               FontSize="{StaticResource FontSizeLarge}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
                <Border Style="{StaticResource AvatarXLargeStyle}">
                    <TextBlock Text="XL"
                               FontSize="{StaticResource FontSizeXLarge}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
            </StackPanel>

            <!-- Badge -->
            <TextBlock Text="Badge" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Button Content="Primary" Style="{StaticResource PrimaryButtonStyle}" FontSize="10" Padding="8,2" Margin="0,0,8,0" />
                <Button Content="Secondary" Style="{StaticResource SecondaryButtonStyle}" FontSize="10" Padding="8,2" Margin="0,0,8,0" />
                <Button Content="Destructive" Style="{StaticResource DestructiveButtonStyle}" FontSize="10" Padding="8,2" Margin="0,0,8,0" />
                <Button Content="Outline" Style="{StaticResource OutlineButtonStyle}" FontSize="10" Padding="8,2" />
            </StackPanel>

            <!-- Context Menu -->
            <TextBlock Text="Context Menu" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Button Content="Right click me"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="150"
                    Margin="0,0,0,32">
                <Button.ContextMenu>
                    <ContextMenu Style="{StaticResource ContextMenuStyle}">
                        <MenuItem Header="Menu Item 1" Style="{StaticResource ContextMenuItemStyle}" />
                        <MenuItem Header="Menu Item 2" Style="{StaticResource ContextMenuItemStyle}" />
                        <MenuItem Header="Menu Item 3" Style="{StaticResource ContextMenuItemStyle}" />
                        <Separator Style="{StaticResource HorizontalSeparatorStyle}" />
                        <MenuItem Header="Exit" Style="{StaticResource ContextMenuItemStyle}" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <!-- Tooltip -->
            <TextBlock Text="Tooltip" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Button Content="Hover for tooltip"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,0,0,32">
                <Button.ToolTip>
                    <ToolTip Content="This is a helpful tooltip message" Style="{StaticResource ToolTipStyle}" />
                </Button.ToolTip>
            </Button>

            <!-- Label -->
            <TextBlock Text="Label" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Label Content="Default Label" Style="{StaticResource LabelStyle}" Margin="0,0,0,8" />
                <Label Content="Large Label" Style="{StaticResource LabelLargeStyle}" Margin="0,0,0,8" />
                <Label Content="Small Label" Style="{StaticResource LabelSmallStyle}" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>