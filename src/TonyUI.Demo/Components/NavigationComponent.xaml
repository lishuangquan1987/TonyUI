<UserControl x:Class="TonyUI.Demo.Components.NavigationComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- Breadcrumb -->
            <TextBlock Text="Breadcrumb" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <TextBlock Text="Home" Style="{StaticResource LinkTextStyle}" />
                <TextBlock Text=" / " Margin="8,0" />
                <TextBlock Text="Components" Style="{StaticResource LinkTextStyle}" />
                <TextBlock Text=" / " Margin="8,0" />
                <TextBlock Text="Navigation" Style="{StaticResource MutedTextStyle}" />
            </StackPanel>

            <!-- Menu -->
            <TextBlock Text="Menu" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Menu Style="{StaticResource MenuStyle}" Margin="0,0,0,32">
                <MenuItem Header="File" Style="{StaticResource MenuItemStyle}">
                    <MenuItem Header="New" Style="{StaticResource MenuItemStyle}" />
                    <MenuItem Header="Open" Style="{StaticResource MenuItemStyle}" />
                    <MenuItem Header="Save" Style="{StaticResource MenuItemStyle}" />
                    <Separator Style="{StaticResource HorizontalSeparatorStyle}" />
                    <MenuItem Header="Exit" Style="{StaticResource MenuItemStyle}" />
                </MenuItem>
                <MenuItem Header="Edit" Style="{StaticResource MenuItemStyle}">
                    <MenuItem Header="Cut" Style="{StaticResource MenuItemStyle}" />
                    <MenuItem Header="Copy" Style="{StaticResource MenuItemStyle}" />
                    <MenuItem Header="Paste" Style="{StaticResource MenuItemStyle}" />
                </MenuItem>
                <MenuItem Header="View" Style="{StaticResource MenuItemStyle}">
                    <MenuItem Header="Zoom In" Style="{StaticResource MenuItemStyle}" />
                    <MenuItem Header="Zoom Out" Style="{StaticResource MenuItemStyle}" />
                </MenuItem>
            </Menu>

            <!-- Pagination -->
            <TextBlock Text="Pagination" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Button Content="&lt; Prev" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0" />
                <Button Content="1" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,4,0" />
                <Button Content="2" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0" />
                <Button Content="3" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0" />
                <Button Content="Next &gt;" Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>

            <!-- Sidebar -->
            <TextBlock Text="Sidebar (Simulated)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Style="{StaticResource CardStyle}" Width="200" Height="200" Margin="0,0,0,32">
                <StackPanel>
                    <Button Content="Dashboard" Style="{StaticResource GhostButtonStyle}" Margin="0,0,0,4" />
                    <Button Content="Settings" Style="{StaticResource GhostButtonStyle}" Margin="0,0,0,4" />
                    <Button Content="Profile" Style="{StaticResource GhostButtonStyle}" Margin="0,0,0,4" />
                    <Button Content="Help" Style="{StaticResource GhostButtonStyle}" />
                </StackPanel>
            </Border>

            <!-- Tabs -->
            <TextBlock Text="Tabs" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <TabControl Style="{StaticResource TabControlStyle}"
                        Width="600"
                        Height="200"
                        Margin="0,0,0,32">
                <TabItem Header="Tab 1" Style="{StaticResource TabItemStyle}">
                    <TextBlock Text="Content for Tab 1"
                               Style="{StaticResource BodyStyle}"
                               Padding="16" />
                </TabItem>
                <TabItem Header="Tab 2" Style="{StaticResource TabItemStyle}">
                    <TextBlock Text="Content for Tab 2"
                               Style="{StaticResource BodyStyle}"
                               Padding="16" />
                </TabItem>
                <TabItem Header="Tab 3" Style="{StaticResource TabItemStyle}">
                    <TextBlock Text="Content for Tab 3"
                               Style="{StaticResource BodyStyle}"
                               Padding="16" />
                </TabItem>
            </TabControl>

            <!-- Tree View -->
            <TextBlock Text="Tree View" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <TreeView Style="{StaticResource TreeViewStyle}"
                      Width="300"
                      Height="200">
                <TreeViewItem Header="Root" Style="{StaticResource TreeViewItemStyle}">
                    <TreeViewItem Header="Child 1" Style="{StaticResource TreeViewItemStyle}" />
                    <TreeViewItem Header="Child 2" Style="{StaticResource TreeViewItemStyle}">
                        <TreeViewItem Header="Grandchild 1" Style="{StaticResource TreeViewItemStyle}" />
                        <TreeViewItem Header="Grandchild 2" Style="{StaticResource TreeViewItemStyle}" />
                    </TreeViewItem>
                    <TreeViewItem Header="Child 3" Style="{StaticResource TreeViewItemStyle}" />
                </TreeViewItem>
            </TreeView>
        </StackPanel>
    </ScrollViewer>
</UserControl>