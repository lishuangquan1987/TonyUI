<UserControl x:Class="TonyUI.Demo.Components.GroupBoxesComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Group Boxes" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Group Boxes" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <GroupBox Header="Default GroupBox" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="This is content inside a GroupBox" Margin="0,0,0,8" />
                    <Button Content="Button inside GroupBox" Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="GroupBox with more content" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <CheckBox Content="Checkbox inside GroupBox" Style="{StaticResource CheckBoxStyle}" Margin="0,0,0,8" />
                    <RadioButton Content="Radio button inside GroupBox" Style="{StaticResource RadioButtonStyle}" GroupName="GroupBoxGroup" Margin="0,0,0,8" />
                    <TextBox Style="{StaticResource TextBoxStyle}" Width="200" Text="Text box inside GroupBox" />
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Disabled GroupBox" IsEnabled="False" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="This GroupBox is disabled" Margin="0,0,0,8" />
                    <Button Content="Disabled Button" Style="{StaticResource SecondaryButtonStyle}" />
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Custom Styled GroupBox" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="This is a group box with custom styling" Margin="0,0,0,8" />
                    <Slider Style="{StaticResource SliderStyle}" Width="200" Value="50" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>