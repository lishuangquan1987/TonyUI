<UserControl x:Class="TonyUI.Demo.Components.DataGridComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- DataGrid -->
            <TextBlock Text="DataGrid" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <DataGrid Width="600" Height="300" 
                      AutoGenerateColumns="False" 
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="80" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Name" Width="150" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Email" Width="200" Binding="{Binding Email}" />
                    <DataGridTextColumn Header="Role" Width="120" Binding="{Binding Role}" />
                    <DataGridCheckBoxColumn Header="Active" Width="80" Binding="{Binding IsActive}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>