<UserControl x:Class="TonyUI.Demo.Components.SelectorsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- DatePicker -->
            <TextBlock Text="DatePicker" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <DatePicker Width="200" Margin="0,0,16,0" />
                <DatePicker Width="200" IsEnabled="False" />
            </StackPanel>

            <!-- Calendar -->
            <TextBlock Text="Calendar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Calendar Width="300" Height="300" Margin="0,0,16,0" />
                <Calendar Width="300" Height="300" IsEnabled="False" />
            </StackPanel>

            <!-- ToggleButton -->
            <TextBlock Text="ToggleButton" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <ToggleButton Content="Toggle Button" Margin="0,0,16,0" />
                <ToggleButton Content="Checked Toggle" IsChecked="True" Margin="0,0,16,0" />
                <ToggleButton Content="Disabled Toggle" IsEnabled="False" />
            </StackPanel>

            <!-- ProgressBar -->
            <TextBlock Text="ProgressBar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ProgressBar Value="30" Height="10" Margin="0,0,0,8" />
                <ProgressBar Value="60" Height="15" Margin="0,0,0,8" />
                <ProgressBar IsIndeterminate="True" Height="10" />
            </StackPanel>

            <!-- Slider -->
            <TextBlock Text="Slider" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Slider Minimum="0" Maximum="100" Value="50" Width="300" Margin="0,0,0,8" />
                <Slider Minimum="0" Maximum="100" Value="75" Width="300" IsEnabled="False" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>