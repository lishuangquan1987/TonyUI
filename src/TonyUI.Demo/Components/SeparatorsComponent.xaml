<UserControl x:Class="TonyUI.Demo.Components.SeparatorsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Separators" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Separators" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Horizontal Separator" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="Content above separator" Margin="0,0,0,8" />
                <Separator Margin="0,8" />
                <TextBlock Text="Content below separator" Margin="0,8,0,0" />
            </StackPanel>
            
            <TextBlock Text="Vertical Separator" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <TextBlock Text="Left side" Margin="0,0,8,0" VerticalAlignment="Center" />
                <Rectangle Fill="{DynamicResource BorderBrush}" Width="1" Height="20" Margin="8,0" VerticalAlignment="Center" />
                <TextBlock Text="Right side" Margin="8,0,0,0" VerticalAlignment="Center" />
            </StackPanel>
            
            <TextBlock Text="Styling with Separators" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="Section 1" FontWeight="Bold" Margin="0,0,0,8" />
                <TextBlock Text="Content for section 1" Margin="0,0,0,8" />
                <Separator Margin="0,8" />
                <TextBlock Text="Section 2" FontWeight="Bold" Margin="0,8,0,8" />
                <TextBlock Text="Content for section 2" Margin="0,0,0,8" />
                <Separator Margin="0,8" />
                <TextBlock Text="Section 3" FontWeight="Bold" Margin="0,8,0,8" />
                <TextBlock Text="Content for section 3" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>