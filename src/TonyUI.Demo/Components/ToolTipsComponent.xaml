<UserControl x:Class="TonyUI.Demo.Components.ToolTipsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Tooltips" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Tooltips" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Tooltip Examples" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Button Content="Button with Tooltip" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="0,0,0,8">
                    <Button.ToolTip>
                        <ToolTip Content="This is a sample tooltip" />
                    </Button.ToolTip>
                </Button>
                
                <TextBox Style="{StaticResource TextBoxStyle}" 
                         Width="300" 
                         Text="TextBox with tooltip" 
                         Margin="0,0,0,8">
                    <TextBox.ToolTip>
                        <ToolTip Content="Enter your text here" />
                    </TextBox.ToolTip>
                </TextBox>
                
                <CheckBox Content="Checkbox with tooltip" 
                          Style="{StaticResource CheckBoxStyle}" 
                          Margin="0,0,0,8">
                    <CheckBox.ToolTip>
                        <ToolTip Content="Click to toggle selection" />
                    </CheckBox.ToolTip>
                </CheckBox>
                
                <RadioButton Content="Radio button with tooltip" 
                             Style="{StaticResource RadioButtonStyle}" 
                             GroupName="TooltipGroup"
                             Margin="0,0,0,8">
                    <RadioButton.ToolTip>
                        <ToolTip Content="Select this option" />
                    </RadioButton.ToolTip>
                </RadioButton>
            </StackPanel>
            
            <TextBlock Text="Custom Styled Tooltips" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Button Content="Button with Custom Tooltip" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Margin="0,0,0,8">
                    <Button.ToolTip>
                        <ToolTip>
                            <Border Background="{DynamicResource BackgroundBrush}" 
                                    BorderBrush="{DynamicResource BorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="8">
                                <TextBlock Text="Custom styled tooltip content" 
                                           Foreground="{DynamicResource ForegroundBrush}" 
                                           FontSize="12" />
                            </Border>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>