<UserControl x:Class="TonyUI.Demo.Components.InputsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             xmlns:inputHelpers="clr-namespace:TonyUI.Helpers;assembly=TonyUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- TextBox -->
            <TextBlock Text="TextBox" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <TextBox Style="{StaticResource TextBoxStyle}" 
                         Width="300" 
                         Margin="0,0,0,8" 
                         Text="Default textbox" />
                <TextBox Style="{StaticResource TextBoxStyle}" 
                         Width="300" 
                         Margin="0,0,0,8" 
                         Text="Disabled textbox" 
                         IsEnabled="False" />
                <TextBox Style="{StaticResource TextBoxStyle}" 
                         Width="300" 
                         Text="" 
                         inputHelpers:InputHelper.Placeholder="Enter text here..." />
            </StackPanel>

            <!-- PasswordBox -->
            <TextBlock Text="PasswordBox" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <PasswordBox Style="{StaticResource PasswordBoxStyle}" 
                             Width="300" 
                             Margin="0,0,0,8" 
                             Password="password" />
                <PasswordBox Style="{StaticResource PasswordBoxStyle}" 
                             Width="300" 
                             Password="disabled" 
                             IsEnabled="False" />
            </StackPanel>

            <!-- ComboBox -->
            <TextBlock Text="ComboBox" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ComboBox Style="{StaticResource ComboBoxStyle}" 
                          Width="300" 
                          Margin="0,0,0,8">
                    <ComboBoxItem Content="Option 1" Style="{StaticResource ComboBoxItemStyle}" />
                    <ComboBoxItem Content="Option 2" Style="{StaticResource ComboBoxItemStyle}" />
                    <ComboBoxItem Content="Option 3" Style="{StaticResource ComboBoxItemStyle}" />
                </ComboBox>
                <ComboBox Style="{StaticResource ComboBoxStyle}" 
                          Width="300" 
                          IsEnabled="False">
                    <ComboBoxItem Content="Disabled Option 1" Style="{StaticResource ComboBoxItemStyle}" />
                    <ComboBoxItem Content="Disabled Option 2" Style="{StaticResource ComboBoxItemStyle}" />
                </ComboBox>
            </StackPanel>

            <!-- TextArea -->
            <TextBlock Text="TextArea" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <TextBox Style="{StaticResource TextBoxStyle}" 
                     Width="400" 
                     Height="100" 
                     AcceptsReturn="True" 
                     TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto"
                     Text="This is a multi-line text box that behaves like a textarea" />
        </StackPanel>
    </ScrollViewer>
</UserControl>