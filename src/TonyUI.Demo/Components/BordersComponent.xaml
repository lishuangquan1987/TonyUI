<UserControl x:Class="TonyUI.Demo.Components.BordersComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Borders" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Borders" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Simple Border" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Background="{DynamicResource BackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="16" 
                    Margin="0,0,0,32" 
                    Width="300">
                <TextBlock Text="Content inside a simple border" />
            </Border>
            
            <TextBlock Text="Different Border Thickness" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Border Background="{DynamicResource BackgroundBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="2" 
                        CornerRadius="4" 
                        Padding="16" 
                        Margin="0,0,0,8" 
                        Width="300">
                    <TextBlock Text="Border with 2px thickness" />
                </Border>
                
                <Border Background="{DynamicResource BackgroundBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="3" 
                        CornerRadius="6" 
                        Padding="16" 
                        Margin="0,0,0,8" 
                        Width="300">
                    <TextBlock Text="Thicker border with rounded corners" />
                </Border>
                
                <Border Background="{DynamicResource BackgroundBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" 
                        BorderThickness="0,0,0,1" 
                        Padding="16" 
                        Margin="0,0,0,8" 
                        Width="300">
                    <TextBlock Text="Bottom border only" />
                </Border>
            </StackPanel>
            
            <TextBlock Text="Colored Borders" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Border Background="{DynamicResource BackgroundBrush}" 
                        BorderBrush="{DynamicResource PrimaryBrush}" 
                        BorderThickness="2" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,8" 
                        Width="300">
                    <TextBlock Text="Primary colored border" />
                </Border>
                
                <Border Background="{DynamicResource BackgroundBrush}" 
                        BorderBrush="{DynamicResource DestructiveBrush}" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="16" 
                        Margin="0,0,0,8" 
                        Width="300">
                    <TextBlock Text="Destructive colored border" />
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>