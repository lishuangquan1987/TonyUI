<UserControl x:Class="TonyUI.Demo.Components.ScrollBarsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Scroll Bars" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Scroll Bars" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Scrollable Content with Custom Scrollbars" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Width="400" Height="200" 
                    Background="{DynamicResource BackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock Text="Line 1" Margin="8" />
                        <TextBlock Text="Line 2" Margin="8" />
                        <TextBlock Text="Line 3" Margin="8" />
                        <TextBlock Text="Line 4" Margin="8" />
                        <TextBlock Text="Line 5" Margin="8" />
                        <TextBlock Text="Line 6" Margin="8" />
                        <TextBlock Text="Line 7" Margin="8" />
                        <TextBlock Text="Line 8" Margin="8" />
                        <TextBlock Text="Line 9" Margin="8" />
                        <TextBlock Text="Line 10" Margin="8" />
                        <TextBlock Text="Line 11" Margin="8" />
                        <TextBlock Text="Line 12" Margin="8" />
                        <TextBlock Text="Line 13" Margin="8" />
                        <TextBlock Text="Line 14" Margin="8" />
                        <TextBlock Text="Line 15" Margin="8" />
                        <TextBlock Text="Line 16" Margin="8" />
                        <TextBlock Text="Line 17" Margin="8" />
                        <TextBlock Text="Line 18" Margin="8" />
                        <TextBlock Text="Line 19" Margin="8" />
                        <TextBlock Text="Line 20" Margin="8" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <TextBlock Text="Horizontal Scrolling Example" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,20,0,16" />
            <Border Width="400" Height="100" 
                    Background="{DynamicResource BackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="4">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="100" Height="80" Background="{DynamicResource MutedBrush}" Margin="4" CornerRadius="4">
                            <TextBlock Text="Item 1" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <Border Width="100" Height="80" Background="{DynamicResource MutedBrush}" Margin="4" CornerRadius="4">
                            <TextBlock Text="Item 2" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <Border Width="100" Height="80" Background="{DynamicResource MutedBrush}" Margin="4" CornerRadius="4">
                            <TextBlock Text="Item 3" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <Border Width="100" Height="80" Background="{DynamicResource MutedBrush}" Margin="4" CornerRadius="4">
                            <TextBlock Text="Item 4" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <Border Width="100" Height="80" Background="{DynamicResource MutedBrush}" Margin="4" CornerRadius="4">
                            <TextBlock Text="Item 5" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <Border Width="100" Height="80" Background="{DynamicResource MutedBrush}" Margin="4" CornerRadius="4">
                            <TextBlock Text="Item 6" VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>