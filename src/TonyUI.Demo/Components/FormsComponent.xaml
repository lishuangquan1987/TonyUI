<UserControl x:Class="TonyUI.Demo.Components.FormsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- Checkbox -->
            <TextBlock Text="Checkbox" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <CheckBox Content="Default checkbox" Style="{StaticResource CheckBoxStyle}" Margin="0,0,0,8" />
                <CheckBox Content="Checked checkbox" Style="{StaticResource CheckBoxStyle}" IsChecked="True" Margin="0,0,0,8" />
                <CheckBox Content="Indeterminate checkbox" Style="{StaticResource CheckBoxStyle}" IsChecked="{x:Null}" Margin="0,0,0,8" />
                <CheckBox Content="Disabled checkbox" Style="{StaticResource CheckBoxStyle}" IsEnabled="False" />
            </StackPanel>

            <!-- Radio Button -->
            <TextBlock Text="Radio Button" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <RadioButton Content="Radio 1" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup" Margin="0,0,0,8" />
                <RadioButton Content="Radio 2" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup" Margin="0,0,0,8" />
                <RadioButton Content="Radio 3 (checked)" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup" IsChecked="True" Margin="0,0,0,8" />
                <RadioButton Content="Disabled radio" Style="{StaticResource RadioButtonStyle}" GroupName="RadioGroup2" IsEnabled="False" />
            </StackPanel>

            <!-- Toggle -->
            <TextBlock Text="Toggle" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ToggleButton Content="Toggle off" Style="{StaticResource ToggleSwitchStyle}" Margin="0,0,0,8" />
                <ToggleButton Content="Toggle on" Style="{StaticResource ToggleSwitchStyle}" IsChecked="True" Margin="0,0,0,8" />
                <ToggleButton Content="Disabled toggle" Style="{StaticResource ToggleSwitchStyle}" IsEnabled="False" />
            </StackPanel>

            <!-- Switch (using ToggleButton) -->
            <TextBlock Text="Switch (using ToggleButton)" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Switch off" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <ToggleButton Style="{StaticResource ToggleSwitchStyle}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Switch on" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <ToggleButton Style="{StaticResource ToggleSwitchStyle}" IsChecked="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Disabled switch" VerticalAlignment="Center" Margin="0,0,12,0" />
                    <ToggleButton Style="{StaticResource ToggleSwitchStyle}" IsEnabled="False" />
                </StackPanel>
            </StackPanel>

            <!-- Slider -->
            <TextBlock Text="Slider" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <Slider Style="{StaticResource SliderStyle}" Width="300" Margin="0,0,0,16" />
                <Slider Style="{StaticResource SliderStyle}" Width="300" Value="50" Margin="0,0,0,16" />
                <Slider Style="{StaticResource SliderStyle}" Width="300" IsEnabled="False" />
            </StackPanel>

            <!-- Form Layout Example -->
            <TextBlock Text="Form Layout Example" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Border Style="{StaticResource CardStyle}" Width="400" Padding="16">
                <StackPanel>
                    <TextBlock Text="Create Account" Style="{StaticResource Heading3Style}" Margin="0,0,0,16" />
                    
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Name" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,4" />
                        <TextBox Style="{StaticResource TextBoxStyle}" />
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Email" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,4" />
                        <TextBox Style="{StaticResource TextBoxStyle}" />
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Password" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,4" />
                        <PasswordBox Style="{StaticResource PasswordBoxStyle}" />
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,16" Orientation="Horizontal">
                        <CheckBox Content="I agree to the terms and conditions" Style="{StaticResource CheckBoxStyle}" />
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancel" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" />
                        <Button Content="Submit" Style="{StaticResource PrimaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>