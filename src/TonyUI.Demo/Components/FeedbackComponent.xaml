<UserControl x:Class="TonyUI.Demo.Components.FeedbackComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <!-- Alert Dialog -->
            <TextBlock Text="Alert Dialog" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Button x:Name="showAlertDialogBtn" 
                        Content="Show Alert Dialog" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="0,0,12,0" />
                <Button Content="Show Confirm Dialog" 
                        Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>

            <!-- Hover Card -->
            <TextBlock Text="Hover Card" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <TextBlock Text="Hover over the button to see the hover card" 
                       Style="{StaticResource MutedTextStyle}" 
                       Margin="0,0,0,8" />
            <Button Content="Hover me" 
                    Style="{StaticResource SecondaryButtonStyle}" 
                    Margin="0,0,0,32">
                <Button.ToolTip>
                    <ToolTip Content="This is a tooltip showing additional information" 
                             Style="{StaticResource ToolTipStyle}" />
                </Button.ToolTip>
            </Button>

            <!-- Progress Bar -->
            <TextBlock Text="Progress Bar" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <ProgressBar Style="{StaticResource ProgressBarStyle}"
                             Width="300"
                             Value="75"
                             Margin="0,0,0,8" />
                <ProgressBar Style="{StaticResource ProgressBarStyle}"
                             Width="300"
                             IsIndeterminate="True" />
            </StackPanel>

            <!-- Skeleton -->
            <TextBlock Text="Skeleton" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,32">
                <Border Width="40" Height="40" 
                        Background="{StaticResource MutedBrush}" 
                        CornerRadius="4" 
                        Margin="0,0,12,0" />
                <StackPanel>
                    <Border Height="12" Width="150" 
                            Background="{StaticResource MutedBrush}" 
                            CornerRadius="2" 
                            Margin="0,0,0,8" />
                    <Border Height="12" Width="100" 
                            Background="{StaticResource MutedBrush}" 
                            CornerRadius="2" />
                </StackPanel>
            </StackPanel>

            <!-- Toast -->
            <TextBlock Text="Toast" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <Button x:Name="showToastBtn" 
                    Content="Show Toast" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Margin="0,0,0,32" />

            <!-- Spinner -->
            <TextBlock Text="Spinner" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="20" Height="20" Fill="{StaticResource PrimaryBrush}" 
                         Margin="0,0,20,0">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Style.Triggers>
                                <Trigger Property="IsVisible" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" 
                                                                 To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                </Trigger>
                            </Style.Triggers>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform CenterX="10" CenterY="10" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
                <TextBlock Text="Loading..." VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>