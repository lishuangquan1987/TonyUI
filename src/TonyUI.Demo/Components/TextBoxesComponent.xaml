<UserControl x:Class="TonyUI.Demo.Components.TextBoxesComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Text Boxes" 
                       Style="{StaticResource Heading1Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Basic Text Boxes" 
                       Style="{StaticResource Heading2Style}" 
                       Margin="0,0,0,20" />
            
            <TextBlock Text="Default TextBox" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <TextBox Style="{StaticResource TextBoxStyle}" Width="300" Margin="0,0,0,8" Text="Default text box" />
                <TextBox Style="{StaticResource TextBoxStyle}" Width="300" Margin="0,0,0,8" Text="Another text box with longer content" />
                <TextBox Style="{StaticResource TextBoxStyle}" Width="300" Margin="0,0,0,8" IsEnabled="False" Text="Disabled text box" />
                <TextBox Style="{StaticResource TextBoxStyle}" Width="300" Text="Text box with placeholder" />
            </StackPanel>
            
            <TextBlock Text="Password Box" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <PasswordBox Style="{StaticResource PasswordBoxStyle}" Width="300" Margin="0,0,0,8" />
                <PasswordBox Style="{StaticResource PasswordBoxStyle}" Width="300" Margin="0,0,0,8" IsEnabled="False" />
            </StackPanel>
            
            <TextBlock Text="Custom Styling" 
                       Style="{StaticResource Heading3Style}" 
                       Margin="0,0,0,16" />
            <StackPanel Margin="0,0,0,32">
                <TextBox Style="{StaticResource TextBoxStyle}" Width="300" Margin="0,0,0,8" Text="Styled text box" />
                <TextBox Style="{StaticResource TextBoxStyle}" Width="300" Text="Another styled text box" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>