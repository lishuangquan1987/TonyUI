<UserControl x:Class="TonyUI.Demo.Components.InputComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             xmlns:helpers="clr-namespace:TonyUI.Helpers;assembly=TonyUI"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Input Controls" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- TextBox Section -->
            <GroupBox Header="TextBox" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Basic TextBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <TextBox helpers:InputHelper.Placeholder="Enter text here..." Margin="0,0,0,15" Height="40"/>
                    
                    <TextBlock Text="Pre-filled TextBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <TextBox Text="Pre-filled text" Margin="0,0,0,15" Height="40"/>
                    
                    <TextBlock Text="Disabled TextBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <TextBox Text="Disabled textbox" IsEnabled="False" Margin="0,0,0,15" Height="40"/>
                    
                    <TextBlock Text="PasswordBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <PasswordBox helpers:InputHelper.Placeholder="Enter password..." Margin="0,0,0,15" Height="40"/>
                    
                    <TextBlock Text="Large TextBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <TextBox helpers:InputHelper.Placeholder="Large input field..." Margin="0,0,0,15" Height="50" FontSize="16"/>
                </StackPanel>
            </GroupBox>

            <!-- CheckBox Section -->
            <GroupBox Header="CheckBox" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Standard Checkboxes" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <CheckBox Content="Default Checkbox" Margin="0,0,0,10" Height="30"/>
                    <CheckBox Content="Checked Checkbox" IsChecked="True" Margin="0,0,0,10" Height="30"/>
                    <CheckBox Content="Unchecked Checkbox" IsChecked="False" Margin="0,0,0,10" Height="30"/>
                    <CheckBox Content="Disabled Checkbox" IsEnabled="False" Margin="0,0,0,10" Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- RadioButton Section -->
            <GroupBox Header="RadioButtons" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Radio Button Group" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <RadioButton GroupName="RadioGroup1" Content="Option 1" Margin="0,0,0,5" Height="30"/>
                    <RadioButton GroupName="RadioGroup1" Content="Option 2" IsChecked="True" Margin="0,0,0,5" Height="30"/>
                    <RadioButton GroupName="RadioGroup1" Content="Option 3" Margin="0,0,0,5" Height="30"/>
                    <RadioButton GroupName="RadioGroup1" Content="Disabled Option" IsEnabled="False" Margin="0,0,0,5" Height="30"/>
                </StackPanel>
            </GroupBox>

            <!-- ToggleButton Section -->
            <GroupBox Header="ToggleButton" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Toggle Buttons" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <ToggleButton Content="Toggle Me" Margin="0,0,0,10" Height="35"/>
                    <ToggleButton Content="Checked Toggle" IsChecked="True" Margin="0,0,0,10" Height="35"/>
                    <ToggleButton Content="Disabled Toggle" IsEnabled="False" Margin="0,0,0,10" Height="35"/>
                </StackPanel>
            </GroupBox>

            <!-- ComboBox Section -->
            <GroupBox Header="ComboBox" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Standard ComboBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <ComboBox Width="250" Margin="0,0,0,15" Height="40">
                        <ComboBoxItem Content="Option 1"/>
                        <ComboBoxItem Content="Option 2"/>
                        <ComboBoxItem Content="Option 3"/>
                        <ComboBoxItem Content="Option 4"/>
                        <ComboBoxItem Content="Option 5"/>
                    </ComboBox>
                    
                    <TextBlock Text="Editable ComboBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <ComboBox Width="250" IsEditable="True" Text="Editable ComboBox" Margin="0,0,0,15" Height="40"/>
                    
                    <TextBlock Text="Disabled ComboBox" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <ComboBox Width="250" IsEnabled="False" SelectedIndex="0" Margin="0,0,0,15" Height="40">
                        <ComboBoxItem Content="Disabled Option 1"/>
                        <ComboBoxItem Content="Disabled Option 2"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <!-- ProgressBar Section -->
            <GroupBox Header="ProgressBar" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Progress Bars" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <ProgressBar Value="50" Maximum="100" Margin="0,0,0,15" Height="12"/>
                    <ProgressBar Value="75" Maximum="100" Height="20" Margin="0,0,0,15"/>
                    <ProgressBar IsIndeterminate="True" Height="12" Margin="0,0,0,15"/>
                    <ProgressBar Value="90" Maximum="100" Height="25" Margin="0,0,0,15"/>
                </StackPanel>
            </GroupBox>

            <!-- Slider Section -->
            <GroupBox Header="Slider" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Sliders" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <Slider Minimum="0" Maximum="100" Value="50" Margin="0,0,0,15" Height="30"/>
                    <Slider Minimum="0" Maximum="100" Value="75" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0,0,0,15" Height="30"/>
                    <Slider Minimum="0" Maximum="10" Value="5" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,15" Height="30"/>
                    <Slider Minimum="0" Maximum="50" Value="25" Orientation="Vertical" Height="100" Width="30" HorizontalAlignment="Left" Margin="0,0,0,15"/>
                </StackPanel>
            </GroupBox>

            <!-- Dialog Section -->
            <GroupBox Header="Dialog" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Dialog Example" Style="{DynamicResource H3Style}" Margin="0,0,0,10"/>
                    <Button x:Name="ShowDialogBtn" Content="Show Sample Dialog" Click="ShowDialogBtn_Click" Margin="0,0,0,10" Height="40" Width="200"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>