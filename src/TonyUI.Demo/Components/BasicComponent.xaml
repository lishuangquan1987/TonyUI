<UserControl x:Class="TonyUI.Demo.Components.BasicComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TonyUI.Demo.Components"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Basic Controls" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Buttons Section -->
            <GroupBox Header="Buttons" Margin="0,0,0,20">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Content="Default Button" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <Button Content="Primary Button" Style="{DynamicResource PrimaryButtonStyle}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                    <Button Content="Secondary Button" Style="{DynamicResource SecondaryButtonStyle}" Grid.Row="0" Grid.Column="2" Margin="5"/>
                    <Button Content="Outline Button" Style="{DynamicResource OutlineButtonStyle}" Grid.Row="0" Grid.Column="3" Margin="5"/>
                    
                    <Button Content="Ghost Button" Style="{DynamicResource GhostButtonStyle}" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <Button Content="Destructive Button" Style="{DynamicResource DestructiveButtonStyle}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                    <Button Content="Link Button" Style="{DynamicResource LinkButtonStyle}" Grid.Row="1" Grid.Column="2" Margin="5"/>
                    <Button Content="Small Button" Style="{DynamicResource SmallButtonStyle}" Grid.Row="1" Grid.Column="3" Margin="5"/>
                    
                    <Button Content="Large Button" Style="{DynamicResource LargeButtonStyle}" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <Button Style="{DynamicResource IconButtonStyle}" Grid.Row="2" Grid.Column="1" Margin="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ”" Grid.Column="0" Margin="0,0,5,0"/>
                            <TextBlock Text="Search" Grid.Column="1"/>
                        </Grid>
                    </Button>
                </Grid>
            </GroupBox>

            <!-- TextBlock Section -->
            <GroupBox Header="TextBlock" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="H1 Style TextBlock" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="H2 Style TextBlock" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="H3 Style TextBlock" FontSize="18" FontWeight="Medium" Margin="0,0,0,10"/>
                    <TextBlock Text="Regular TextBlock with Default Style" Margin="0,0,0,10"/>
                    <TextBlock Text="Muted TextBlock" Foreground="{DynamicResource MutedTextBrush}" Margin="0,0,0,10"/>
                    <TextBlock Text="Large TextBlock" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <TextBlock Text="Small TextBlock" FontSize="12" Margin="0,0,0,10"/>
                </StackPanel>
            </GroupBox>

            <!-- Label Section -->
            <GroupBox Header="Label" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <Label Content="Default Label" Margin="0,0,0,10"/>
                    <Label Content="Bold Label" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Label Content="Muted Label" Foreground="{DynamicResource MutedTextBrush}" Margin="0,0,0,10"/>
                    <Label Content="Large Label" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Label Content="Small Label" FontSize="12" Margin="0,0,0,10"/>
                </StackPanel>
            </GroupBox>

            <!-- Border Section -->
            <GroupBox Header="Border" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="4" 
                            Padding="10" 
                            Margin="0,0,10,0">
                        <TextBlock Text="Card-like Border" />
                    </Border>
                    <Border Background="{DynamicResource SecondaryBackgroundBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="15">
                        <TextBlock Text="Secondary Border" />
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Card Section -->
            <GroupBox Header="Card" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16" 
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Card Title" FontSize="16" FontWeight="Medium" Margin="0,0,0,8"/>
                            <TextBlock Text="This is a card component with some content inside. Cards are useful for organizing content in a clean, contained way." TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{DynamicResource CardBackgroundBrush}" 
                            BorderBrush="{DynamicResource BorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" 
                                    Background="{DynamicResource PrimaryBackgroundBrush}" 
                                    CornerRadius="6" 
                                    Padding="12" 
                                    Margin="0,0,16,0">
                                <TextBlock Text="ðŸ“¦" FontSize="24"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Card with Icon" FontWeight="Medium" Margin="0,0,0,4"/>
                                <TextBlock Text="Supporting text can be found here." FontSize="12" Foreground="{DynamicResource MutedTextBrush}"/>
                            </StackPanel>
                            
                            <Button Grid.Column="2" 
                                    Content="Action" 
                                    Style="{DynamicResource SmallButtonStyle}" 
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Separator Section -->
            <GroupBox Header="Separator" Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Content above separator" Margin="0,0,0,10"/>
                    <Separator Margin="0,5" />
                    <TextBlock Text="Content below separator" Margin="0,10,0,0"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>