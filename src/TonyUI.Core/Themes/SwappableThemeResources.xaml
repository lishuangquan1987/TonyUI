<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Color Resources - These will be swapped during theme changes -->
    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="Foreground">#09090B</Color>

    <Color x:Key="Card">#FFFFFF</Color>
    <Color x:Key="CardForeground">#09090B</Color>

    <Color x:Key="Popover">#FFFFFF</Color>
    <Color x:Key="PopoverForeground">#09090B</Color>

    <Color x:Key="Primary">#18181B</Color>
    <Color x:Key="PrimaryForeground">#FAFAFA</Color>

    <Color x:Key="Secondary">#F4F4F5</Color>
    <Color x:Key="SecondaryForeground">#18181B</Color>

    <Color x:Key="Muted">#F4F4F5</Color>
    <Color x:Key="MutedForeground">#71717A</Color>

    <Color x:Key="Accent">#F4F4F5</Color>
    <Color x:Key="AccentForeground">#18181B</Color>

    <Color x:Key="Destructive">#EF4444</Color>
    <Color x:Key="DestructiveForeground">#FAFAFA</Color>

    <Color x:Key="Border">#E4E4E7</Color>
    <Color x:Key="Input">#E4E4E7</Color>
    <Color x:Key="Ring">#18181B</Color>

    <!-- Additional color shades -->
    <Color x:Key="Zinc50">#FAFAFA</Color>
    <Color x:Key="Zinc100">#F4F4F5</Color>
    <Color x:Key="Zinc200">#E4E4E7</Color>
    <Color x:Key="Zinc300">#D4D4D8</Color>
    <Color x:Key="Zinc400">#A1A1AA</Color>
    <Color x:Key="Zinc500">#71717A</Color>
    <Color x:Key="Zinc600">#52525B</Color>
    <Color x:Key="Zinc700">#3F3F46</Color>
    <Color x:Key="Zinc800">#27272A</Color>
    <Color x:Key="Zinc900">#18181B</Color>
    <Color x:Key="Zinc950">#09090B</Color>

    <Color x:Key="Primary50">#FAFAFA</Color>
    <Color x:Key="Primary100">#F4F4F5</Color>
    <Color x:Key="Primary200">#E4E4E7</Color>
    <Color x:Key="Primary300">#D4D4D8</Color>
    <Color x:Key="Primary400">#A1A1AA</Color>
    <Color x:Key="Primary500">#71717A</Color>
    <Color x:Key="Primary600">#52525B</Color>
    <Color x:Key="Primary700">#3F3F46</Color>
    <Color x:Key="Primary800">#27272A</Color>
    <Color x:Key="Primary900">#18181B</Color>
    <Color x:Key="Primary950">#09090B</Color>

    <Color x:Key="Secondary50">#FAFAFA</Color>
    <Color x:Key="Secondary100">#F4F4F5</Color>
    <Color x:Key="Secondary200">#E4E4E7</Color>
    <Color x:Key="Secondary300">#D4D4D8</Color>
    <Color x:Key="Secondary400">#A1A1AA</Color>
    <Color x:Key="Secondary500">#71717A</Color>
    <Color x:Key="Secondary600">#52525B</Color>
    <Color x:Key="Secondary700">#3F3F46</Color>
    <Color x:Key="Secondary800">#27272A</Color>
    <Color x:Key="Secondary900">#18181B</Color>
    <Color x:Key="Secondary950">#09090B</Color>

    <Color x:Key="Muted50">#FAFAFA</Color>
    <Color x:Key="Muted100">#F4F4F5</Color>
    <Color x:Key="Muted200">#E4E4E7</Color>
    <Color x:Key="Muted300">#D4D4D8</Color>
    <Color x:Key="Muted400">#A1A1AA</Color>
    <Color x:Key="Muted500">#71717A</Color>
    <Color x:Key="Muted600">#52525B</Color>
    <Color x:Key="Muted700">#3F3F46</Color>
    <Color x:Key="Muted800">#27272A</Color>
    <Color x:Key="Muted900">#18181B</Color>
    <Color x:Key="Muted950">#09090B</Color>

    <Color x:Key="Destructive50">#FEF2F2</Color>
    <Color x:Key="Destructive100">#FEE2E2</Color>
    <Color x:Key="Destructive200">#FECACA</Color>
    <Color x:Key="Destructive300">#FCA5A5</Color>
    <Color x:Key="Destructive400">#F87171</Color>
    <Color x:Key="Destructive500">#EF4444</Color>
    <Color x:Key="Destructive600">#DC2626</Color>
    <Color x:Key="Destructive700">#B91C1C</Color>
    <Color x:Key="Destructive800">#991B1B</Color>
    <Color x:Key="Destructive900">#7F1D1D</Color>
    <Color x:Key="Destructive950">#450A0A</Color>

    <!-- Brushes that reference the colors above -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Foreground}" />
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource Card}" />
    <SolidColorBrush x:Key="CardForegroundBrush" Color="{StaticResource CardForeground}" />
    <SolidColorBrush x:Key="PopoverBrush" Color="{StaticResource Popover}" />
    <SolidColorBrush x:Key="PopoverForegroundBrush" Color="{StaticResource PopoverForeground}" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForeground}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForeground}" />
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource Muted}" />
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="{StaticResource MutedForeground}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="{StaticResource AccentForeground}" />
    <SolidColorBrush x:Key="DestructiveBrush" Color="{StaticResource Destructive}" />
    <SolidColorBrush x:Key="DestructiveForegroundBrush" Color="{StaticResource DestructiveForeground}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}" />
    <SolidColorBrush x:Key="InputBrush" Color="{StaticResource Input}" />
    <SolidColorBrush x:Key="RingBrush" Color="{StaticResource Ring}" />

    <!-- Additional color brushes -->
    <SolidColorBrush x:Key="Primary50Brush" Color="{StaticResource Primary50}" />
    <SolidColorBrush x:Key="Primary100Brush" Color="{StaticResource Primary100}" />
    <SolidColorBrush x:Key="Primary200Brush" Color="{StaticResource Primary200}" />
    <SolidColorBrush x:Key="Primary300Brush" Color="{StaticResource Primary300}" />
    <SolidColorBrush x:Key="Primary400Brush" Color="{StaticResource Primary400}" />
    <SolidColorBrush x:Key="Primary500Brush" Color="{StaticResource Primary500}" />
    <SolidColorBrush x:Key="Primary600Brush" Color="{StaticResource Primary600}" />
    <SolidColorBrush x:Key="Primary700Brush" Color="{StaticResource Primary700}" />
    <SolidColorBrush x:Key="Primary800Brush" Color="{StaticResource Primary800}" />
    <SolidColorBrush x:Key="Primary900Brush" Color="{StaticResource Primary900}" />
    <SolidColorBrush x:Key="Primary950Brush" Color="{StaticResource Primary950}" />
    
    <SolidColorBrush x:Key="Secondary50Brush" Color="{StaticResource Secondary50}" />
    <SolidColorBrush x:Key="Secondary100Brush" Color="{StaticResource Secondary100}" />
    <SolidColorBrush x:Key="Secondary200Brush" Color="{StaticResource Secondary200}" />
    <SolidColorBrush x:Key="Secondary300Brush" Color="{StaticResource Secondary300}" />
    <SolidColorBrush x:Key="Secondary400Brush" Color="{StaticResource Secondary400}" />
    <SolidColorBrush x:Key="Secondary500Brush" Color="{StaticResource Secondary500}" />
    <SolidColorBrush x:Key="Secondary600Brush" Color="{StaticResource Secondary600}" />
    <SolidColorBrush x:Key="Secondary700Brush" Color="{StaticResource Secondary700}" />
    <SolidColorBrush x:Key="Secondary800Brush" Color="{StaticResource Secondary800}" />
    <SolidColorBrush x:Key="Secondary900Brush" Color="{StaticResource Secondary900}" />
    <SolidColorBrush x:Key="Secondary950Brush" Color="{StaticResource Secondary950}" />
    
    <SolidColorBrush x:Key="Muted50Brush" Color="{StaticResource Muted50}" />
    <SolidColorBrush x:Key="Muted100Brush" Color="{StaticResource Muted100}" />
    <SolidColorBrush x:Key="Muted200Brush" Color="{StaticResource Muted200}" />
    <SolidColorBrush x:Key="Muted300Brush" Color="{StaticResource Muted300}" />
    <SolidColorBrush x:Key="Muted400Brush" Color="{StaticResource Muted400}" />
    <SolidColorBrush x:Key="Muted500Brush" Color="{StaticResource Muted500}" />
    <SolidColorBrush x:Key="Muted600Brush" Color="{StaticResource Muted600}" />
    <SolidColorBrush x:Key="Muted700Brush" Color="{StaticResource Muted700}" />
    <SolidColorBrush x:Key="Muted800Brush" Color="{StaticResource Muted800}" />
    <SolidColorBrush x:Key="Muted900Brush" Color="{StaticResource Muted900}" />
    <SolidColorBrush x:Key="Muted950Brush" Color="{StaticResource Muted950}" />
    
    <SolidColorBrush x:Key="Destructive50Brush" Color="{StaticResource Destructive50}" />
    <SolidColorBrush x:Key="Destructive100Brush" Color="{StaticResource Destructive100}" />
    <SolidColorBrush x:Key="Destructive200Brush" Color="{StaticResource Destructive200}" />
    <SolidColorBrush x:Key="Destructive300Brush" Color="{StaticResource Destructive300}" />
    <SolidColorBrush x:Key="Destructive400Brush" Color="{StaticResource Destructive400}" />
    <SolidColorBrush x:Key="Destructive500Brush" Color="{StaticResource Destructive500}" />
    <SolidColorBrush x:Key="Destructive600Brush" Color="{StaticResource Destructive600}" />
    <SolidColorBrush x:Key="Destructive700Brush" Color="{StaticResource Destructive700}" />
    <SolidColorBrush x:Key="Destructive800Brush" Color="{StaticResource Destructive800}" />
    <SolidColorBrush x:Key="Destructive900Brush" Color="{StaticResource Destructive900}" />
    <SolidColorBrush x:Key="Destructive950Brush" Color="{StaticResource Destructive950}" />

    <!-- Basic font family -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI, Roboto, Helvetica, Arial, sans-serif</FontFamily>
    <FontFamily x:Key="MonoFontFamily">Consolas, Courier New, monospace</FontFamily>

    <!-- Basic dimensions -->
    <sys:Double x:Key="FontSizeSmall">11</sys:Double>
    <sys:Double x:Key="FontSizeNormal">13</sys:Double>
    <sys:Double x:Key="FontSizeMedium">14</sys:Double>
    <sys:Double x:Key="FontSizeLarge">16</sys:Double>
    <sys:Double x:Key="FontSizeXLarge">18</sys:Double>
    <sys:Double x:Key="FontSizeXXLarge">24</sys:Double>
    <sys:Double x:Key="FontSizeXXXLarge">30</sys:Double>

    <Thickness x:Key="PaddingSmall">4</Thickness>
    <Thickness x:Key="PaddingNormal">8</Thickness>
    <Thickness x:Key="PaddingMedium">12</Thickness>
    <Thickness x:Key="PaddingLarge">16</Thickness>
    <Thickness x:Key="PaddingXLarge">24</Thickness>
    <Thickness x:Key="PaddingXXLarge">32</Thickness>

    <Thickness x:Key="MarginSmall">4</Thickness>
    <Thickness x:Key="MarginNormal">8</Thickness>
    <Thickness x:Key="MarginMedium">12</Thickness>
    <Thickness x:Key="MarginLarge">16</Thickness>
    <Thickness x:Key="MarginXLarge">24</Thickness>
    <Thickness x:Key="MarginXXLarge">32</Thickness>

    <CornerRadius x:Key="CornerRadiusSmall">2</CornerRadius>
    <CornerRadius x:Key="CornerRadiusNormal">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusXLarge">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusFull">9999</CornerRadius>

    <sys:Double x:Key="BorderThicknessSmall">0.5</sys:Double>
    <sys:Double x:Key="BorderThicknessNormal">1</sys:Double>
    <sys:Double x:Key="BorderThicknessMedium">1.5</sys:Double>
    <sys:Double x:Key="BorderThicknessLarge">2</sys:Double>

</ResourceDictionary>