<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Violet Theme Colors -->
    <Color x:Key="Primary50">#f5f3ff</Color>
    <Color x:Key="Primary100">#ede9fe</Color>
    <Color x:Key="Primary200">#ddd6fe</Color>
    <Color x:Key="Primary300">#c4b5fd</Color>
    <Color x:Key="Primary400">#a78bfa</Color>
    <Color x:Key="Primary500">#8b5cf6</Color>
    <Color x:Key="Primary600">#7c3aed</Color>
    <Color x:Key="Primary700">#6d28d9</Color>
    <Color x:Key="Primary800">#5b21b6</Color>
    <Color x:Key="Primary900">#4c1d95</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="BackgroundMuted">#f5f3ff</Color>
    <Color x:Key="BackgroundDim">#ede9fe</Color>
    
    <!-- Foreground Colors -->
    <Color x:Key="Foreground">#020817</Color>
    <Color x:Key="ForegroundSecondary">#6b7280</Color>
    <Color x:Key="ForegroundTertiary">#9ca3af</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#c4b5fd</Color>
    <Color x:Key="BorderSecondary">#8b5cf6</Color>
    
    <!-- State Colors -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>
    
</ResourceDictionary>