<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Rose Theme Colors -->
    <Color x:Key="Primary50">#fff1f2</Color>
    <Color x:Key="Primary100">#ffe4e6</Color>
    <Color x:Key="Primary200">#fecdd3</Color>
    <Color x:Key="Primary300">#fda4af</Color>
    <Color x:Key="Primary400">#fb7185</Color>
    <Color x:Key="Primary500">#f43f5e</Color>
    <Color x:Key="Primary600">#e11d48</Color>
    <Color x:Key="Primary700">#be123c</Color>
    <Color x:Key="Primary800">#9f1239</Color>
    <Color x:Key="Primary900">#881337</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="BackgroundMuted">#fdf2f8</Color>
    <Color x:Key="BackgroundDim">#f8fafc</Color>
    
    <!-- Foreground Colors -->
    <Color x:Key="Foreground">#020817</Color>
    <Color x:Key="ForegroundSecondary">#6b7280</Color>
    <Color x:Key="ForegroundTertiary">#9ca3af</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#fda4af</Color>
    <Color x:Key="BorderSecondary">#f43f5e</Color>
    
    <!-- State Colors -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>
    
</ResourceDictionary>