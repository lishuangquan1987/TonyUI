<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Neutral Theme Colors -->
    <Color x:Key="Primary50">#fafaf9</Color>
    <Color x:Key="Primary100">#f5f5f4</Color>
    <Color x:Key="Primary200">#e7e5e4</Color>
    <Color x:Key="Primary300">#d6d3d1</Color>
    <Color x:Key="Primary400">#a8a29e</Color>
    <Color x:Key="Primary500">#78716c</Color>
    <Color x:Key="Primary600">#57534e</Color>
    <Color x:Key="Primary700">#44403c</Color>
    <Color x:Key="Primary800">#292524</Color>
    <Color x:Key="Primary900">#1c1917</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="BackgroundMuted">#f9fafb</Color>
    <Color x:Key="BackgroundDim">#f3f4f6</Color>
    
    <!-- Foreground Colors -->
    <Color x:Key="Foreground">#020817</Color>
    <Color x:Key="ForegroundSecondary">#6b7280</Color>
    <Color x:Key="ForegroundTertiary">#9ca3af</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#e5e7eb</Color>
    <Color x:Key="BorderSecondary">#d1d5db</Color>
    
    <!-- State Colors -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>
    
</ResourceDictionary>