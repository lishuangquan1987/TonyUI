<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Blue Theme Colors -->
    <Color x:Key="Primary50">#eff6ff</Color>
    <Color x:Key="Primary100">#dbeafe</Color>
    <Color x:Key="Primary200">#bfdbfe</Color>
    <Color x:Key="Primary300">#93c5fd</Color>
    <Color x:Key="Primary400">#60a5fa</Color>
    <Color x:Key="Primary500">#3b82f6</Color>
    <Color x:Key="Primary600">#2563eb</Color>
    <Color x:Key="Primary700">#1d4ed8</Color>
    <Color x:Key="Primary800">#1e40af</Color>
    <Color x:Key="Primary900">#1e3a8a</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="BackgroundMuted">#eff6ff</Color>
    <Color x:Key="BackgroundDim">#dbeafe</Color>
    
    <!-- Foreground Colors -->
    <Color x:Key="Foreground">#020817</Color>
    <Color x:Key="ForegroundSecondary">#6b7280</Color>
    <Color x:Key="ForegroundTertiary">#9ca3af</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#93c5fd</Color>
    <Color x:Key="BorderSecondary">#3b82f6</Color>
    
    <!-- State Colors -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>
    
</ResourceDictionary>