<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Green Theme Colors -->
    <Color x:Key="Primary50">#f0fdf4</Color>
    <Color x:Key="Primary100">#dcfce7</Color>
    <Color x:Key="Primary200">#bbf7d0</Color>
    <Color x:Key="Primary300">#86efac</Color>
    <Color x:Key="Primary400">#4ade80</Color>
    <Color x:Key="Primary500">#22c55e</Color>
    <Color x:Key="Primary600">#16a34a</Color>
    <Color x:Key="Primary700">#15803d</Color>
    <Color x:Key="Primary800">#166534</Color>
    <Color x:Key="Primary900">#14532d</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="BackgroundMuted">#ecfdf5</Color>
    <Color x:Key="BackgroundDim">#f0fdf4</Color>
    
    <!-- Foreground Colors -->
    <Color x:Key="Foreground">#020817</Color>
    <Color x:Key="ForegroundSecondary">#6b7280</Color>
    <Color x:Key="ForegroundTertiary">#9ca3af</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#86efac</Color>
    <Color x:Key="BorderSecondary">#22c55e</Color>
    
    <!-- State Colors -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>
    
</ResourceDictionary>