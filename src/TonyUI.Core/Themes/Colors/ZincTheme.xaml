<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Zinc Theme Colors -->
    <Color x:Key="Primary50">#fafafa</Color>
    <Color x:Key="Primary100">#f4f4f5</Color>
    <Color x:Key="Primary200">#e4e4e7</Color>
    <Color x:Key="Primary300">#d4d4d8</Color>
    <Color x:Key="Primary400">#a1a1aa</Color>
    <Color x:Key="Primary500">#71717a</Color>
    <Color x:Key="Primary600">#52525b</Color>
    <Color x:Key="Primary700">#3f3f46</Color>
    <Color x:Key="Primary800">#27272a</Color>
    <Color x:Key="Primary900">#18181b</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#ffffff</Color>
    <Color x:Key="BackgroundMuted">#f9fafb</Color>
    <Color x:Key="BackgroundDim">#f3f4f6</Color>
    
    <!-- Foreground Colors -->
    <Color x:Key="Foreground">#020817</Color>
    <Color x:Key="ForegroundSecondary">#6b7280</Color>
    <Color x:Key="ForegroundTertiary">#9ca3af</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#e5e7eb</Color>
    <Color x:Key="BorderSecondary">#d1d5db</Color>
    
    <!-- State Colors -->
    <Color x:Key="Success">#10b981</Color>
    <Color x:Key="Warning">#f59e0b</Color>
    <Color x:Key="Error">#ef4444</Color>
    <Color x:Key="Info">#3b82f6</Color>
    
</ResourceDictionary>