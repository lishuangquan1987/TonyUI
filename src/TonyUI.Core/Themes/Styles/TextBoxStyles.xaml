                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="RichTextBoxStyle"
        BasedOn="{StaticResource BaseTextBoxStyle}"
        TargetType="RichTextBox" />

</ResourceDictionary>
