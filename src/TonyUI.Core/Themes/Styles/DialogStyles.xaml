<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DialogStyle" TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
        <Setter Property="ShowInTaskbar" Value="False" />
        <Setter Property="SizeToContent" Value="WidthAndHeight" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome
                    CaptionHeight="32"
                    GlassFrameThickness="0"
                    ResizeBorderThickness="5" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="{StaticResource BorderThicknessNormal}"
                        CornerRadius="{StaticResource CornerRadiusMedium}"
                        Effect="{StaticResource DropShadowEffect}"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border
                                x:Name="TitleBar"
                                Grid.Row="0"
                                Padding="16,8"
                                Background="{StaticResource MutedBrush}">
                                <Grid>
                                    <TextBlock
                                        x:Name="TitleText"
                                        VerticalAlignment="Center"
                                        FontSize="{StaticResource FontSizeMedium}"
                                        FontWeight="SemiBold"
                                        Text="{TemplateBinding Title}" />
                                    <Button
                                        x:Name="CloseButton"
                                        Width="32"
                                        Height="32"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Content="âœ•"
                                        FontSize="16"
                                        Style="{StaticResource IconButtonStyle}" />
                                </Grid>
                            </Border>
                            <ContentPresenter Grid.Row="1" Margin="{StaticResource PaddingLarge}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="AlertDialogStyle"
        BasedOn="{StaticResource DialogStyle}"
        TargetType="Window">
        <Setter Property="SizeToContent" Value="WidthAndHeight" />
        <Setter Property="MinWidth" Value="400" />
        <Setter Property="MaxWidth" Value="500" />
    </Style>

    <Style
        x:Key="ConfirmDialogStyle"
        BasedOn="{StaticResource DialogStyle}"
        TargetType="Window">
        <Setter Property="SizeToContent" Value="WidthAndHeight" />
        <Setter Property="MinWidth" Value="400" />
        <Setter Property="MaxWidth" Value="500" />
    </Style>

</ResourceDictionary>
