<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ImageStyle" TargetType="Image">
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <Style x:Key="AvatarStyle" TargetType="Border">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Background" Value="{StaticResource MutedBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessNormal}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusFull}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="ClipToBounds" Value="True" />
    </Style>

    <Style
        x:Key="AvatarSmallStyle"
        BasedOn="{StaticResource AvatarStyle}"
        TargetType="Border">
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
    </Style>

    <Style
        x:Key="AvatarLargeStyle"
        BasedOn="{StaticResource AvatarStyle}"
        TargetType="Border">
        <Setter Property="Width" Value="56" />
        <Setter Property="Height" Value="56" />
    </Style>

    <Style
        x:Key="AvatarXLargeStyle"
        BasedOn="{StaticResource AvatarStyle}"
        TargetType="Border">
        <Setter Property="Width" Value="72" />
        <Setter Property="Height" Value="72" />
    </Style>

</ResourceDictionary>
