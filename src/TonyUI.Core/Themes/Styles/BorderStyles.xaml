<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="{StaticResource BorderThicknessNormal}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusNormal}" />
        <Setter Property="Padding" Value="{StaticResource PaddingNormal}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <Style
        x:Key="BorderSmallStyle"
        BasedOn="{StaticResource BorderStyle}"
        TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusSmall}" />
        <Setter Property="Padding" Value="{StaticResource PaddingSmall}" />
    </Style>

    <Style
        x:Key="BorderMediumStyle"
        BasedOn="{StaticResource BorderStyle}"
        TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}" />
        <Setter Property="Padding" Value="{StaticResource PaddingMedium}" />
    </Style>

    <Style
        x:Key="BorderLargeStyle"
        BasedOn="{StaticResource BorderStyle}"
        TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusLarge}" />
        <Setter Property="Padding" Value="{StaticResource PaddingLarge}" />
    </Style>

    <Style
        x:Key="BorderFullStyle"
        BasedOn="{StaticResource BorderStyle}"
        TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusFull}" />
    </Style>

</ResourceDictionary>
